<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

	<settings>
		<setting name="mapUnderscoreToCamelCase" value="true"/>
	</settings>
	
	<typeAliases>
		<typeAlias type="com.mc.mvc.member.dto.Member" alias="Member"/>
		<typeAlias type="java.time.LocalDateTime" alias="LocalDateTime"/>
		<typeAlias type="com.mc.mvc.board.dto.Board" alias="Board"/>
		<typeAlias type="com.mc.mvc.todo.dto.TodoList" alias="TodoList"/>
	</typeAliases>
	
	<mappers>
		<mapper resource="mybatis/mapper/BoardMapper.xml"/>
	</mappers>


</configuration>